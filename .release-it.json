{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCommits": true
  },
  "npm": {
    "release": true,
    "skipChecks": true
  },
  "hooks": {
    "after:bump": "yarn build"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "commitsOpts": {
        "ignore": ["chore", "docs"]
      }
    }
  }
}